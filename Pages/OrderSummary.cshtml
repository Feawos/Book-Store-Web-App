@page
@model BookStore.Pages.OrderSummaryModel
@{
    ViewData["Title"] = "Order Summary";
}
<h2>Order Summary</h2>

<div>
    <h4>@Model.BookTitle</h4>
    <div>Quantity: @Model.Quantity</div>
    <div>Total Price: €@Model.TotalPrice.ToString("N2")</div>
</div>

<div class="mt-3">
    <a asp-page="./Index" class="btn btn-primary">Continue Shopping</a>
    <a asp-page="./Checkout" class="btn btn-success">Checkout</a>
</div>